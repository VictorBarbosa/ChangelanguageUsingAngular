

@{
    ViewBag.Title = "title";

}

 


<div ng-controller="InfoController">
    @*Container of buttons*@
    <div class="container">
        <div class="col-md-6">
            <input type="search" id="inputSearch" class="text-center" ng-model="criterioDeBusca"  ng-attr-placeholder="{{Informations.selectedOption.placeHolder}}" value="" />
        </div>
        <div class="col-md-6">
            <select id="selectLanguage"   ng-cloak  ng-options="option.lang for option in Informations.availableOptions track by option.id" ng-model="Informations.selectedOption"></select>
        </div>
    </div>
    @*Container of Grid*@
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="divTable">
                    <div class="table-responsive">
                        <table  ng-cloak id="template1" class="text-center table table-hover table-striped table-bordered" >
                            <thead>
                                <tr>
                                    <td style="width: 22%">{{Informations.selectedOption.tabelName}}</td>
                                    <td style="width: 22%">{{Informations.selectedOption.tabelSurName}}</td>
                                    <td style="width: 22%">{{Informations.selectedOption.tabelaAge}}</td>
                                    <td style="width: 22%">{{Informations.selectedOption.tabelaEmail}}</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="info  in InformationsGrid |filter:criterioDeBusca">
                                    <td>{{info.name}} </td>
                                    <td>{{info.surname}} </td>
                                    <td>{{info.age}} </td>
                                    <td>{{info.email}} </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
<script src="~/Scripts/pages/info.js"></script>

<script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
</script>